#:kivy 1.1.0

<ListButton>:
    text_size: (self.width*0.95, self.height*0.95)

<ConfigPopup>:    
    id: popup
    BoxLayout:
        orientation: 'vertical'
        
        FileChooserListView:
            id: file_chooser
            
        Button:
            text: 'Load'
            size_hint: (1,0.1)
            on_release: popup.dismiss()
            on_release: app.manager.get_config(file_chooser.selection[0])
    
<SelectionScreen>:
    name: 'selection'
    
    # Connect the ids to screen attributes
    player: player
    button_bar: button_bar    
    lang_switch: lang_switch
    
    BoxLayout:
        orientation: 'horizontal'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1875,1)
                
            BoxLayout:
                id: button_bar
                orientation: 'vertical'
                size_hint: (1, 0.9)           

            Button:     
                id: lang_switch
                text: app.manager.lang2_switch_text
                disabled: app.manager.lang_switch_disabled
                opacity: app.manager.lang_switch_opacity
                text_size: self.size
                markup: True
                on_release: root.localize()
                size_hint: app.manager.lang_switch_size_hint
                height: 0 # This is important for if the button is hidden
                halign: 'center'
                valign: 'center'
                font_size: 15
                color: [1,1,1,1]
                font_name: app.manager.font_lang_switch
                background_normal: app.manager.lang_switch_background_normal
                background_down: app.manager.lang_switch_background_down
           
        Video:
            id: player
            size_hint: (0.8125, 1)
            source: app.manager.attractor_lang1
            state: 'play'
            options: {'eos': 'loop'}

    
    
    
    
    
    
    
    